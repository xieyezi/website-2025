---
import siteConfig from '../data/site-config';

type Props = { date?: Date };

const { date = new Date() } = Astro.props;
---

<time datetime={date.toISOString()}>
    {
        date.toLocaleDateString(siteConfig.locale, {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
        })
    }
</time>
